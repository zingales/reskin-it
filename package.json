{
  "name": "reskin-it",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prisma" : "cp prisma/schema.prisma api/schema.prisma && prisma generate --schema=./api/schema.prisma && prisma generate",
    "build": "vite build && npm run check",
    "check": "tsc -b && eslint .",

    "local:frontend": "vite",
    "local:backend": "npx tsx api/index.ts",
    

    "local:db:migrate": "prisma migrate deploy",
    "local:db:seed": "npx tsx prisma/seed.ts",
    "local:db:studio": "prisma studio",
    "local:db:update": "npm run local:db:start && npm run prisma && npm run local:db:migrate && npm run local:db:seed",
    "local:db:start": "docker-compose up -d",
    "local:db:stop": "docker-compose down",
    "local:full": "npm run local:db:start && concurrently \"npm run local:frontend\" \"npm run local:backend\""
    
  },
  "dependencies": {
    "@chakra-ui/react": "^3.22.0",
    "@chakra-ui/system": "^2.6.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@prisma/client": "^6.13.0",
    "@vercel/node": "^5.3.12",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "framer-motion": "^12.23.6",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.13.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
